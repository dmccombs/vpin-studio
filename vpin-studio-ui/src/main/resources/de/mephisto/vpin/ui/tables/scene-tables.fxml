<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<BorderPane styleClass="main" stylesheets="@../stylesheet.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.mephisto.vpin.ui.tables.TablesController">
   <center>
      <BorderPane BorderPane.alignment="CENTER">
         <center>
            <BorderPane styleClass="subpanel" BorderPane.alignment="CENTER">
               <center>
                  <BorderPane styleClass="subpanel" BorderPane.alignment="CENTER">
                     <center>
                        <StackPane fx:id="tableStack" styleClass="media-parent">
                           <BorderPane.margin>
                              <Insets bottom="6.0" />
                           </BorderPane.margin>
                           <children>
                              <TableView fx:id="tableView" onMouseClicked="#onTableMouseClicked" style="-fx-background-color: #2a2a2a;" styleClass="base-component">
                                <columns>
                                    <TableColumn fx:id="columnId" minWidth="42.400028228759766" prefWidth="42.400028228759766" style="-fx-alignment: baseline-right;" text="ID" />
                                    <TableColumn fx:id="columnStatus" minWidth="57.5999755859375" prefWidth="67.199951171875" style="-fx-alignment: CENTER;" text="Status" />
                                  <TableColumn fx:id="columnDisplayName" minWidth="100.0" prefWidth="298.40000915527344" style="-fx-alignment: BASELINE_LEFT;" text="Display Name" />
                                    <TableColumn fx:id="columnEmulator" minWidth="10.4000244140625" prefWidth="138.39999389648438" style="-fx-alignment: BASELINE_LEFT;" text="Emulator" />
                                    <TableColumn fx:id="columnB2S" minWidth="51.199951171875" prefWidth="103.199951171875" style="-fx-alignment: CENTER;" text="DirectB2S File" />
                                    <TableColumn fx:id="columnPUPPack" minWidth="57.5999755859375" prefWidth="76.800048828125" style="-fx-alignment: CENTER;" text="PUP Pack" />
                                  <TableColumn fx:id="columnRom" minWidth="10.4000244140625" prefWidth="138.39999389648438" style="-fx-alignment: BASELINE_LEFT;" text="ROM" />
                                </columns>
                              </TableView>
                           </children>
                        </StackPane>
                     </center>
                     <BorderPane.margin>
                        <Insets left="12.0" right="12.0" top="12.0" />
                     </BorderPane.margin>
                     <top>
                        <ToolBar prefHeight="40.0" style="-fx-background-radius: 3 3 0 0;" styleClass="base-component" BorderPane.alignment="CENTER">
                          <items>
                              <TextField fx:id="textfieldSearch" onKeyPressed="#onSearchKeyPressed" prefHeight="26.0" prefWidth="250.0" promptText="Table Search...">
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                              </TextField>
                              <Separator orientation="VERTICAL" prefHeight="0.0" prefWidth="0.0" />
                            <Button fx:id="reloadBtn" mnemonicParsing="false" onAction="#onReload" text="Reload" textFill="WHITE">
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                                 <graphic>
                                    <FontIcon iconColor="WHITE" iconLiteral="sil-reload" />
                                 </graphic>
                              </Button>
                              <Separator orientation="VERTICAL" prefHeight="30.0" prefWidth="12.0" />
                              <Button fx:id="uploadTableBtn" layoutX="492.0" layoutY="11.0" mnemonicParsing="false" onAction="#onTableUpload" text="Upload Table" textFill="WHITE">
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                                 <graphic>
                                    <FontIcon iconColor="WHITE" iconLiteral="mdi2u-upload" />
                                 </graphic>
                              </Button>
                              <Button fx:id="scanAllBtn" mnemonicParsing="false" onAction="#onTablesScan" text="Scan All Tables" textFill="WHITE">
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                                 <graphic>
                                    <FontIcon iconColor="WHITE" iconLiteral="mdi2m-map-search-outline" />
                                 </graphic>
                              </Button>
                              <Button fx:id="scanBtn" mnemonicParsing="false" onAction="#onTableScan" text="Scan Table" textFill="WHITE">
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                                 <graphic>
                                    <FontIcon iconColor="WHITE" iconLiteral="mdi2m-map-search" />
                                 </graphic>
                              </Button>
                              <Separator orientation="VERTICAL" prefHeight="30.0" prefWidth="12.0" />
                              <Button fx:id="validateBtn" mnemonicParsing="false" onAction="#onValidate" text="Validate" textFill="WHITE">
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                                 <graphic>
                                    <FontIcon iconColor="WHITE" iconLiteral="sil-magnifier" />
                                 </graphic>
                                 <tooltip>
                                    <Tooltip text="Resets the dismissed validations and revalidates the table configuration." />
                                 </tooltip>
                              </Button>
                          </items>
                           <BorderPane.margin>
                              <Insets />
                           </BorderPane.margin>
                        </ToolBar>
                     </top>
                     <bottom>
                        <BorderPane BorderPane.alignment="CENTER">
                           <BorderPane.margin>
                              <Insets bottom="12.0" />
                           </BorderPane.margin>
                           <center>
                              <BorderPane fx:id="validationError">
                                 <left>
                                    <VBox BorderPane.alignment="CENTER">
                                       <BorderPane.margin>
                                          <Insets bottom="3.0" left="12.0" top="3.0" />
                                       </BorderPane.margin>
                                       <children>
                                          <Label fx:id="validationErrorLabel" text="Label" textFill="WHITE">
                                             <font>
                                                <Font name="System Bold" size="14.0" />
                                             </font>
                                          </Label>
                                          <Label fx:id="validationErrorText" text="Label" textFill="WHITE">
                                              <font>
                                                  <Font name="System" size="14.0" />
                                              </font>
                                          </Label>
                                       </children>
                                    </VBox>
                                 </left>
                                 <right>
                                    <VBox BorderPane.alignment="TOP_RIGHT">
                                       <BorderPane.margin>
                                          <Insets right="6.0" />
                                       </BorderPane.margin>
                                       <children>
                                          <Hyperlink onAction="#onDismiss" text="Dismiss" textFill="WHITE">
                                             <font>
                                                <Font size="10.0" />
                                             </font>
                                          </Hyperlink>
                                       </children>
                                    </VBox>
                                 </right>
                              </BorderPane>
                           </center>
                           <top>
                              <Label fx:id="labelTableCount" textFill="WHITE" BorderPane.alignment="TOP_RIGHT">
                                 <BorderPane.margin>
                                    <Insets bottom="3.0" />
                                 </BorderPane.margin>
                              </Label>
                           </top>
                        </BorderPane>
                     </bottom>
                  </BorderPane>
               </center>
               <BorderPane.margin>
                  <Insets left="12.0" right="12.0" />
               </BorderPane.margin>
            </BorderPane>
         </center>
      </BorderPane>
   </center>
   <top>
      <fx:include fx:id="mainToolbar" source="../scene-toolbar.fxml" />
   </top>
   <right>
      <fx:include fx:id="tablesSideBar" source="scene-tables-sidebar.fxml" />
   </right>
</BorderPane>
