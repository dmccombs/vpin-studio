<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<BorderPane styleClass="base-component" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.mephisto.vpin.ui.TextEditorController">
    <top>
        <fx:include fx:id="header" source="/de/mephisto/vpin/commons/fx/scene-dialog-header.fxml" />
    </top>
   <center>
      <BorderPane fx:id="root">
      
          <center>
              <BorderPane fx:id="centerPane" prefHeight="700.0" styleClass="subpanel" BorderPane.alignment="CENTER">
                  <BorderPane.margin>
                      <Insets />
                  </BorderPane.margin>
              </BorderPane>
          </center>
         <top>
            <ToolBar BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets />
               </BorderPane.margin>
               <items>
                  <TextField fx:id="textfieldSearch" onKeyPressed="#onSearchKeyPressed" prefHeight="30.0" prefWidth="215.0" promptText="Search..." visible="false">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </TextField>
               </items>
            </ToolBar>
         </top>
         <bottom>
            <ToolBar nodeOrientation="RIGHT_TO_LEFT" prefHeight="40.0" prefWidth="1233.0" BorderPane.alignment="CENTER">
              <items>
                  <BorderPane>
                     <right>
                        <HBox spacing="6.0" BorderPane.alignment="CENTER">
                           <children>
                            <Button fx:id="saveAndCloseBtn" alignment="CENTER_RIGHT" contentDisplay="RIGHT" mnemonicParsing="false" onAction="#onSaveAndClose" styleClass="submit-button" text="Save &amp; Close" textFill="WHITE">
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                              </Button>
                              <Button fx:id="saveBtn" alignment="CENTER_RIGHT" contentDisplay="RIGHT" mnemonicParsing="false" onAction="#onSave" styleClass="submit-button" text="Save" textFill="WHITE">
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                              </Button>
                              <Button fx:id="closeBtn" alignment="CENTER_RIGHT" contentDisplay="RIGHT" mnemonicParsing="false" onAction="#onCancelClick" styleClass="default-button" text="Close" textFill="WHITE">
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                              </Button>
                           </children>
                        </HBox>
                     </right>
                  </BorderPane>
              </items>
            </ToolBar>
         </bottom>
      </BorderPane>
   </center>
   <stylesheets>
      <URL value="@richtext.css" />
      <URL value="@stylesheet.css" />
   </stylesheets>
</BorderPane>
