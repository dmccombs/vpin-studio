<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<StackPane prefWidth="600.0" styleClass="base-component" stylesheets="@../stylesheet.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.mephisto.vpin.ui.players.DiscordPlayersController">
    <children>
        <BorderPane>
            <center>
                <TableView BorderPane.alignment="CENTER">
                    <columns>
                        <TableColumn prefWidth="75.0" text="ID" />
                        <TableColumn prefWidth="250.0" text="Name" />
                  <TableColumn minWidth="0.0" text="Initials" />
                  <TableColumn minWidth="0.0" text="Avatar" />
                    </columns>
                </TableView>
            </center>
         <top>
            <ToolBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
              <items>
                  <TextField>
                     <font>
                        <Font size="14.0" />
                     </font>
                  </TextField>
                  <Separator orientation="VERTICAL" prefHeight="0.0" prefWidth="0.0" />
                <Button mnemonicParsing="false" onAction="#onReload" text="Reload" textFill="WHITE">
                     <font>
                        <Font size="14.0" />
                     </font>
                     <graphic>
                        <FontIcon iconColor="WHITE" iconLiteral="sil-reload" />
                     </graphic>
                  </Button>
              </items>
            </ToolBar>
         </top>
        </BorderPane>
    </children>
</StackPane>
