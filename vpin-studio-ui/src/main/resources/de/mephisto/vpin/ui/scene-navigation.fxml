                      <opaqueInsets>
                          <Insets />
                      </opaqueInsets>
                      <padding>
                          <Insets left="47.0" />
                      </padding>
                      <cursor>
                          <Cursor fx:constant="HAND" />
                      </cursor>
                     <graphic>
                        <FontIcon iconColor="WHITE" iconLiteral="bi-person" />
                     </graphic>
                  </Button>
              </children>
          </VBox>
         </center>
         <top>
            <BorderPane fx:id="avatarPane" prefHeight="220.0" prefWidth="250.0" BorderPane.alignment="CENTER">
               <padding>
                  <Insets bottom="24.0" left="24.0" right="24.0" top="24.0" />
               </padding>
            </BorderPane>
         </top>
      </BorderPane>
   </top>
