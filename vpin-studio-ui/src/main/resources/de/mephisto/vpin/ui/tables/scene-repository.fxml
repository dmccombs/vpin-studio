<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<StackPane fx:id="tableStack" styleClass="base-component" stylesheets="@../stylesheet.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.mephisto.vpin.ui.tables.RepositoryController">
    <children>
        <BorderPane>
            <center>
                <TableView fx:id="tableView" style="-fx-background-color: #2a2a2a;" BorderPane.alignment="CENTER">
                    <columns>
                  <TableColumn fx:id="iconColumn" minWidth="0.0" prefWidth="90.39989471435547" style="-fx-alignment: CENTER;" />
                        <TableColumn fx:id="nameColumn" prefWidth="328.8000259399414" style="-fx-alignment: BASELINE_LEFT;" text="Name" />
                  <TableColumn fx:id="directB2SColumn" prefWidth="100.0" style="-fx-alignment: CENTER;" text="DirectB2S" />
                  <TableColumn fx:id="pupPackColumn" prefWidth="100.0" style="-fx-alignment: CENTER;" text="PUP Pack" />
                  <TableColumn fx:id="romColumn" prefWidth="100.0" style="-fx-alignment: CENTER;" text="ROM" />
                  <TableColumn fx:id="popperColumn" prefWidth="110.0" style="-fx-alignment: CENTER;" text="Popper Media" />
                  <TableColumn fx:id="sizeColumn" prefWidth="100.0" style="-fx-alignment: CENTER;" text="Size" />
                  <TableColumn fx:id="createdAtColumn" minWidth="2.39996337890625" prefWidth="150.0" style="-fx-alignment: CENTER;" text="Created At" />
                    </columns>
                </TableView>
            </center>
         <top>
            <ToolBar BorderPane.alignment="CENTER">
              <items>
                  <Label text="Repository: " textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Label>
                  <ComboBox fx:id="sourceCombo" prefHeight="30.0" prefWidth="249.0" />
                  <Separator layoutX="475.0" layoutY="10.0" orientation="VERTICAL" prefHeight="0.0" prefWidth="12.0" />
                  <TextField fx:id="searchTextField" prefHeight="30.0" prefWidth="200.0" promptText="Search Repository...">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </TextField>
                  <Separator orientation="VERTICAL" prefHeight="0.0" prefWidth="12.0" />
                <Button fx:id="reloadBtn" mnemonicParsing="false" onAction="#onReload" text="Reload" textFill="WHITE">
                     <font>
                        <Font size="14.0" />
                     </font>
                     <graphic>
                        <FontIcon iconColor="WHITE" iconLiteral="sil-reload" />
                     </graphic>
                  </Button>
                  <Separator orientation="VERTICAL" prefHeight="0.0" prefWidth="12.0" />
                  <Button fx:id="installBtn" layoutX="198.0" layoutY="10.0" mnemonicParsing="false" onAction="#onInstall" text="Install Table" textFill="WHITE">
                     <font>
                        <Font size="14.0" />
                     </font>
                     <graphic>
                        <FontIcon iconColor="WHITE" iconLiteral="mdi2p-play-circle-outline" />
                     </graphic>
                  </Button>
                  <Button fx:id="uploadBtn" layoutX="298.0" layoutY="10.0" mnemonicParsing="false" onAction="#onUpload" text="Upload" textFill="WHITE">
                     <font>
                        <Font size="14.0" />
                     </font>
                     <graphic>
                        <FontIcon iconColor="WHITE" iconLiteral="mdi2u-upload" />
                     </graphic>
                  </Button>
                  <Button fx:id="downloadBtn" layoutX="376.0" layoutY="10.0" mnemonicParsing="false" onAction="#onDownload" text="Download" textFill="WHITE">
                     <font>
                        <Font size="14.0" />
                     </font>
                     <graphic>
                        <FontIcon iconColor="WHITE" iconLiteral="mdi2d-download" />
                     </graphic>
                  </Button>
                  <Separator layoutX="282.0" layoutY="10.0" orientation="VERTICAL" prefHeight="0.0" prefWidth="12.0" />
                  <Button fx:id="deleteBtn" layoutX="379.0" layoutY="11.0" mnemonicParsing="false" onAction="#onDelete" text="Delete" textFill="#ff3333">
                     <font>
                        <Font size="14.0" />
                     </font>
                     <graphic>
                        <FontIcon iconColor="#ff3333" iconLiteral="mdi2d-delete-outline" />
                     </graphic>
                  </Button>
              </items>
            </ToolBar>
         </top>
        </BorderPane>
    </children>
</StackPane>
