<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<BorderPane styleClass="base-component" stylesheets="@../../stylesheet.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.mephisto.vpin.ui.tables.dialogs.TableMediaAdminController">
   <top>
      <fx:include fx:id="header" source="/de/mephisto/vpin/commons/fx/scene-dialog-header.fxml" />
   </top>
   <center>
      <BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minWidth="-Infinity">
         <top>
            <BorderPane BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets left="12.0" right="12.0" top="12.0" />
               </BorderPane.margin>
               <left>
                  <ListView fx:id="assetList" BorderPane.alignment="CENTER" />
               </left>
               <center>
                  <BorderPane BorderPane.alignment="CENTER">
                     <top>
                        <ToolBar prefHeight="40.0" prefWidth="500.0" BorderPane.alignment="CENTER">
                          <items>
                            <Button fx:id="addToPlaylistBtn" mnemonicParsing="false" onAction="#onPlaylistAdd" text="Add To Playlist" textFill="WHITE">
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                                 <graphic>
                                    <FontIcon iconColor="WHITE" iconLiteral="mdi2f-format-list-bulleted" />
                                 </graphic>
                              </Button>
                              <Separator orientation="VERTICAL" prefHeight="0.0" prefWidth="12.0" />
                              <Button fx:id="deleteBtn" mnemonicParsing="false" onAction="#onDelete" text="Delete" textFill="#ff3333">
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                                 <graphic>
                                    <FontIcon iconColor="#ff3333" iconLiteral="mdi2d-delete-outline" />
                                 </graphic>
                              </Button>
                          </items>
                        </ToolBar>
                     </top>
                     <center>
                        <BorderPane fx:id="mediaPane" maxHeight="400.0" maxWidth="500.0" prefHeight="400.0" prefWidth="500.0" styleClass="media-container" BorderPane.alignment="CENTER" />
                     </center>
                  </BorderPane>
               </center>
            </BorderPane>
         </top>
         <bottom>
            <HBox alignment="BASELINE_RIGHT" BorderPane.alignment="CENTER">
               <children>
                  <Button fx:id="cancelBtn" layoutX="418.0" layoutY="10.0" mnemonicParsing="false" onAction="#onCancel" styleClass="submit-button" text="Close">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Button>
               </children>
               <BorderPane.margin>
                  <Insets bottom="12.0" left="12.0" right="12.0" top="12.0" />
               </BorderPane.margin>
            </HBox>
         </bottom>
      </BorderPane>
   </center>
</BorderPane>
