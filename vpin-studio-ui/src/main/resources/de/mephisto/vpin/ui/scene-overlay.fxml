<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane styleClass="base-component" stylesheets="@stylesheet.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.mephisto.vpin.ui.overlay.OverlayController">
    <top>
        <fx:include fx:id="mainToolbar" source="scene-toolbar.fxml" />
    </top>
    <center>
        <BorderPane BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets left="12.0" right="12.0" />
         </BorderPane.margin>
         <center>
            <BorderPane styleClass="subpanel" BorderPane.alignment="CENTER">
               <top>
                  <ToolBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                    <items>
                      <Button mnemonicParsing="false" text="Button" />
                    </items>
                  </ToolBar>
               </top>
               <center>
                  <BorderPane prefHeight="200.0" styleClass="media-container" BorderPane.alignment="CENTER" />
               </center>
            </BorderPane>
         </center>
         <right>
            <BorderPane prefWidth="600.0" styleClass="subpanel" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets left="12.0" />
               </BorderPane.margin>
            </BorderPane>
         </right>
        </BorderPane>
    </center>
</BorderPane>
